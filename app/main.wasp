action createTravelEstimate {
  fn: import { createTravelEstimate } from "@src/travel/operations",
  entities: [TravelEstimate]
}

query getTravelEstimates {
  fn: import { getTravelEstimates } from "@src/travel/operations",
  entities: [TravelEstimate]
}

